@model IEnumerable<Food_Reservation.Models.Reserve>

@{
    ViewData["Title"] = "My Reservations";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-3">My Reservations</h2>
    <p class="text-muted mb-4">Here are your reservations. Check the status below:</p>

    <div class="card shadow-sm rounded-4">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Reservation ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ReserveId</td>
                            <td>@item.CustomerName</td>
                            <td>@item.CustomerEmail</td>
                            <td>@item.CustomerPhone</td>
                            <td>@item.ReservationDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                @if (item.Status == "Confirmed")
                                {
                                    <span class="badge bg-success">@item.Status</span>
                                }
                                else if (item.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">@item.Status</span>
                                }
                                else if (item.Status == "Cancelled")
                                {
                                    <span class="badge bg-danger">@item.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.Status</span>
                                }
                            </td>
                             
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Search" class="btn btn-outline-secondary">&larr; New Search</a>
    </div>
</div>
