@{
    ViewData["Title"] = "Find My Reservation";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-3">Find My Reservation</h2>
    <p class="text-muted mb-4">Enter your name below to check the status of your reservation.</p>

    <form asp-action="Search" method="post">
        <div class="input-group mb-3">
            <input type="text" name="customerName" class="form-control" placeholder="Enter your full name..." required />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-warning mt-3">
            @ViewBag.ErrorMessage
        </div>
    }
</div>
