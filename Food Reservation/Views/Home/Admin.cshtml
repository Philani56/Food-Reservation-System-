@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 bg-dark text-white p-3 rounded-3 shadow-sm">
            <h4 class="text-center mb-4">Admin Panel</h4>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-action="Dashboard" asp-controller="Admin">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-action="Index" asp-controller="Reservations">
                        <i class="bi bi-calendar-check"></i> Reservations
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-action="Index" asp-controller="MenuItems">
                        <i class="bi bi-list"></i> Menu Items
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-action="Logout" asp-controller="Admin">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10">
            <h2 class="mb-4">Welcome, Admin 👋</h2>

            <!-- Dashboard Cards -->
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm border-0 rounded-3">
                        <div class="card-body">
                            <h5 class="card-title">Total Reservations</h5>
                            <p class="card-text display-6 text-primary">120</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm border-0 rounded-3">
                        <div class="card-body">
                            <h5 class="card-title">Menu Items</h5>
                            <p class="card-text display-6 text-success">45</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm border-0 rounded-3">
                        <div class="card-body">
                            <h5 class="card-title">Active Users</h5>
                            <p class="card-text display-6 text-warning">23</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
