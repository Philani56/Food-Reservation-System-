@model Food_Reservation.Models.MenuItem

@{
    ViewData["Title"] = "Create Menu Item";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center text-dark">Add New Menu Item</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="p-4 shadow-sm rounded-4 bg-white">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control form-control-sm" placeholder="Enter item name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Description" class="form-control form-control-sm" rows="2" placeholder="Brief description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Price" class="form-label fw-semibold"></label>
                        <input asp-for="Price" class="form-control form-control-sm" placeholder="e.g. 120.00"/>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Stock" class="form-label fw-semibold"></label>
                        <input asp-for="Stock" class="form-control form-control-sm" placeholder="Quantity available"/>
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label fw-semibold"></label>
                    <input asp-for="ImageUrl" class="form-control form-control-sm" placeholder="Image URL"/>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-sm fw-semibold">Create Menu Item</button>
                </div>

            </form>

            <div class="mt-3 text-center">
                <a asp-controller="Admin" a asp-action="Dashboard" class="text-decoration-none">&larr; Back</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
